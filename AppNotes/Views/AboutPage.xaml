<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppNotes.Views.AboutPage"
             Title="AboutPage">
    <VerticalStackLayout>
        <HorizontalStackLayout>
            <Image Source="dotnet_bot.png"
                   SemanticProperties.Description="The dotnet bot waving hello !!"
                   HeightRequest="64"/>
            <Label FontSize="25"
                   FontAttributes="Bold"
                   Text="Notes"/>

            <Label FontSize="25"
                   FontAttributes="Italic"
                   Text="v1.0"
                   VerticalOptions="Start"
                   Padding="0"/>
        </HorizontalStackLayout>
        <Label   FontSize="22" Text="App Written In MAUI" HorizontalOptions="Center"/>
        <Button Text="Learn More..." Clicked="LearnMore_Clicked" HorizontalOptions="Center" Margin="20"/>


    </VerticalStackLayout>
</ContentPage>